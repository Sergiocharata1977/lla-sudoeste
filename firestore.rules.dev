rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // REGLAS TEMPORALES PARA DESARROLLO
    // ⚠️ IMPORTANTE: Estas reglas permiten acceso completo sin autenticación
    // Solo usar durante el desarrollo inicial
    // Cambiar a reglas de producción antes de lanzar la aplicación
    
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
